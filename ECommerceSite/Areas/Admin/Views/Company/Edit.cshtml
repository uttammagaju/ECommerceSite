@model Company

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Update Company</h2>
            </div>
        </div>
    </div>
    <div class="card-body py-2">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Id" hidden />

            <div class="row">
                <div class="col-12">
                    <div class="border p-3">
                        <div class=" mb-3 row">
                            <label asp-for="Name" class="ms-2 ">Name</label>
                            <input asp-for="Name" class="form-control border-0 shadow" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class=" mb-3 row">
                            <label asp-for="PhoneNumber" class="ms-2 ">Phone Number</label>
                            <input asp-for="PhoneNumber" class=" form-control border-0 shadow" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class=" mb-3 row">
                            <label asp-for="StreetAddress" class="ms-2 ">Street Address</label>
                            <input asp-for="StreetAddress" class=" form-control border-0 shadow" />
                            <span asp-validation-for="StreetAddress" class="text-danger"></span>
                        </div>
                        <div class=" mb-3 row">
                            <label asp-for="City" class="ms-2 ">City</label>
                            <input asp-for="City" class=" form-control border-0 shadow" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class=" mb-3 row">
                            <label asp-for="State" class="ms-2 ">State</label>
                            <input asp-for="State" class=" form-control border-0 shadow" />
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                        <div class=" mb-3 row">
                            <label asp-for="PostalCode" class="ms-2 ">Postal Code</label>
                            <input asp-for="PostalCode" class=" form-control border-0 shadow" />
                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-6 col-md-3">
                                @if (Model.Id != 0)
                                {
                                    <button type="submit" class="btn btn-outline-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-outline-primary form-control">Create</button>

                                }
                            </div>
                            <div class=" col-6 col-md-3">
                                <a asp-controller="Company" asp-action="Index" class="btn btn-outline-primary form-control">Back To List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>

@section scripts {

    @{
        <partial name="_ValidationScriptsPartial" />

    }
}